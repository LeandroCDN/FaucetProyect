; To use right-click install.inf and select "install". Then go to Mouse Properties>Pointers and select the Cursor Sans Light scheme.
; 
[Version]
signature="$Windows NT$"

[DefaultInstall]
CopyFiles = Scheme.cur, Scheme.txt
AddReg    = Scheme.reg

[DestinationDirs]
Scheme.cur = 10,"%CUR_DIR%"
Scheme.txt = 10,"%CUR_DIR%"

[Scheme.Reg]
HKCU,"Control Panel\Cursors\Schemes","%SCHEME_NAME%",,"%10%\%CUR_DIR%\%pointer%,%10%\%CUR_DIR%\%help%,%10%\%CUR_DIR%\%work%,%10%\%CUR_DIR%\%busy%,%10%\%CUR_DIR%\%cross%,%10%\%CUR_DIR%\%Text%,%10%\%CUR_DIR%\%Hand%,%10%\%CUR_DIR%\%unavailable%,%10%\%CUR_DIR%\%Vert%,%10%\%CUR_DIR%\%Horz%,%10%\%CUR_DIR%\%dgn1%,%10%\%CUR_DIR%\%dgn2%,%10%\%CUR_DIR%\%move%,%10%\%CUR_DIR%\%alternate%,%10%\%CUR_DIR%\%link%"

; -- Common Information

[Scheme.Cur]
arrow_light.cur
arrow_light_blue.cur
arrow_light_orange.cur
arrow_light_purple.cur
arrow_light_red.cur
arrow_light_red_dark.cur
beam.cur
busy_light.ani
busy_light_dark.ani
busy_light_orange.ani
busy_light_purple.ani
busy_light_red.ani
Cross.cur
left_right_light.cur
move_light.cur
pen_light.cur
top_left_light.cur
top_right_light.cur
up_light.cur
up_down_light.cur
working_light.ani
working_light_dark.ani
working_light_orange.ani
Working_light_purple.ani
working_light_red.ani

[Strings]
CUR_DIR       = "Cursors\Cursor Sans Light"
SCHEME_NAME   = "Cursor Sans Light"
pointer       = "arrow_light.cur"
help          = "arrow_light_blue.cur"
work          = "working_light.ani"
busy          = "busy_light.ani"
text          = "beam.cur"
unavailable   = "arrow_light_red.cur"
vert          = "up_down_light.cur"
horz          = "left_right_light.cur"
dgn1          = "top_left_light.cur"
dgn2          = "top_right_light.cur"
move          = "move_light.cur"
link          = "arrow_light_blue.cur"
cross         = "cross.cur"
hand          = "pen_light.cur"
alternate     = "up_light.cur"