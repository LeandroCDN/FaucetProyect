; To use right-click install.inf and select "install". Then go to Mouse Properties>Pointers and select the Cursor Sans scheme.
; 
[Version]
signature="$Windows NT$"

[DefaultInstall]
CopyFiles = Scheme.cur, Scheme.txt
AddReg    = Scheme.reg

[DestinationDirs]
Scheme.cur = 10,"%CUR_DIR%"
Scheme.txt = 10,"%CUR_DIR%"

[Scheme.Reg]
HKCU,"Control Panel\Cursors\Schemes","%SCHEME_NAME%",,"%10%\%CUR_DIR%\%pointer%,%10%\%CUR_DIR%\%help%,%10%\%CUR_DIR%\%work%,%10%\%CUR_DIR%\%busy%,%10%\%CUR_DIR%\%cross%,%10%\%CUR_DIR%\%Text%,%10%\%CUR_DIR%\%Hand%,%10%\%CUR_DIR%\%unavailable%,%10%\%CUR_DIR%\%Vert%,%10%\%CUR_DIR%\%Horz%,%10%\%CUR_DIR%\%dgn1%,%10%\%CUR_DIR%\%dgn2%,%10%\%CUR_DIR%\%move%,%10%\%CUR_DIR%\%alternate%,%10%\%CUR_DIR%\%link%"

; -- Common Information

[Scheme.Cur]
arrow.cur
arrow_blue.cur
arrow_blue_dark.cur
arrow_orange.cur
arrow_purple.cur
arrow_red.cur
arrow_red_dark.cur
beam.cur
busy.ani
busy_dark.ani
busy_orange.ani
busy_purple.ani
busy_red.ani
cross.cur
install.inf
install_orange.inf
install_purple.inf
install_red.inf
left_right.cur
move.cur
pen.cur
top_left.cur
top_right.cur
up.cur
up_down.cur
working.ani
working_blue_dark.ani
working_dark.ani
working_orange.ani
working_purple.ani
working_red.ani

[Strings]
CUR_DIR        = "\Cursors\Cursor Sans"
SCHEME_NAME    = "Cursor Sans Purple"
pointer        = "arrow.cur"
help           = "arrow_purple.cur"
work           = "working_purple.ani"
busy           = "busy_purple.ani"
text           = "beam.cur"
unavailable    = "arrow_red.cur"
vert           = "up_down.cur"
horz           = "left_right.cur"
dgn1           = "top_left.cur"
dgn2           = "top_right.cur"
move           = "move.cur"
link           = "arrow_purple.cur"
cross          = "cross.cur"
hand           = "pen.cur"
alternate      = "up.cur"
